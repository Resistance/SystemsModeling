STATECHART:
    top [DS]
        watch [DS]
            test [CS] [DS]
                A [DS]
                    Timef [CS] [DS]
                        running [DS]
                    Indiglo [CS] [DS]
                        Off [DS]
                        On
                        TurningOff
                    Mode [CS] [DS]
                        Time [DS]
                        Chrono
                        br_down
                        editing
            testingtoo [CS] [DS]
                chronog [DS]
                    CD [DS]

ENTER:
   N: top.watch.test.A.Indiglo.Off
   O: gui.unsetIndiglo()

ENTER:
   N: top.watch.test.A.Timef.running
   O: gui.increaseTimeByOne()
gui.checkTime()

ENTER:
   N: top.watch.testingtoo.chronog.CD
   O: gui.refreshChronoDisplay()

ENTER:
   N: top.watch.test.A.Indiglo.On
   O: gui.setIndiglo()

ENTER:
   N: top.watch.test.A.Mode.Time
   O: gui.refreshTimeDisplay()

ENTER:
   N: top.watch.test.A.Mode.Chrono
   O: gui.refreshChronoDisplay()

